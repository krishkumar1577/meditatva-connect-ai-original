# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/meditatva-db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here
JWT_EXPIRES_IN=15m

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_BASIC_PRICE_ID=price_your-basic-plan-price-id
STRIPE_PREMIUM_PRICE_ID=price_your-premium-plan-price-id
STRIPE_PRO_PRICE_ID=price_your-pro-plan-price-id

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Email Configuration (using Gmail as example)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Email Templates & Branding
EMAIL_FROM=Meditatva <noreply@meditatva.com>
APP_NAME=Meditatva Connect
APP_URL=https://meditatva.com

# Redis (for session storage - optional)
REDIS_URL=redis://localhost:6379

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_COUNT=5

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Social Media Integration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Analytics & Monitoring (optional)
ANALYTICS_API_KEY=your-analytics-api-key
SENTRY_DSN=your-sentry-dsn

# Push Notifications (optional)
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# AI Service Configuration
AI_MODEL_NAME=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Health Check & Monitoring
HEALTH_CHECK_SECRET=your-health-check-secret

# Development & Testing
TEST_DB_URI=mongodb://localhost:27017/meditatva-test
DEBUG_MODE=true
LOG_LEVEL=info